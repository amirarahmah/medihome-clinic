<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp">

    <RelativeLayout
        android:id="@+id/jadwal_dokter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp">


        <ImageView
            android:id="@+id/icon_doctor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/medihome_doctor_button"/>

        <TextView
            android:id="@+id/nama_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/icon_doctor"
            android:layout_alignBottom="@id/icon_doctor"
            android:text="dr. Haikal Achmad"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@id/icon_doctor"/>

        <TextView
            android:id="@+id/hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_dokter"
            android:text="Senin"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/jadwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="10.00-13.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari"/>

        <TextView
            android:id="@+id/jadwal2"
            android:layout_toRightOf="@id/jadwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="13.00-15.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari"/>

        <TextView
            android:id="@+id/jadwal3"
            android:layout_toRightOf="@id/jadwal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="15.00-18.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari"/>

        <TextView
            android:id="@+id/jadwal9"
            android:layout_toRightOf="@id/jadwal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="18.00-20.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari"/>

        <TextView
            android:id="@+id/hari2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jadwal1"
            android:text="Selasa"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/jadwal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="13.00-15.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari2"/>

        <TextView
            android:id="@+id/jadwal5"
            android:layout_toRightOf="@id/jadwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="15.00-19.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari2"/>

        <TextView
            android:id="@+id/hari3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jadwal4"
            android:text="Rabu"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/jadwal6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="10.00-13.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari3"/>

        <TextView
            android:id="@+id/jadwal7"
            android:layout_toRightOf="@id/jadwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="13.00-15.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari3"/>

        <TextView
            android:id="@+id/jadwal8"
            android:layout_toRightOf="@id/jadwal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background_grey"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="13.00-15.00"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_below="@id/hari3"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>